{
    "name": "polytics/larapex-charts",
    "type": "library",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0|^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Polytics\\LarapexCharts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Polytics\\LarapexCharts\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Polytics\\LarapexCharts\\LarapexChartsServiceProvider"
            ]
        }
    }

}
